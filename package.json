{
  "name": "obs-multi-platform-streaming",
  "version": "1.0.0",
  "description": "Modern UI, modular architecture OBS multi-platform streaming system",
  "main": "dist/electron/main.js",
  "type": "module",
  "bin": {
    "obs-multi-platform-streaming": "./dist/main.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-frontend && npm run minify-frontend",
    "copy-frontend": "node scripts/copy-frontend.mjs",
    "minify-frontend": "npm run minify-js && npm run minify-css",
    "minify-js": "terser dist/ui/frontend/static/js/websocket-client.js dist/ui/frontend/static/js/main.js -o dist/ui/frontend/static/js/main.min.js -c -m --source-map --comments false",
    "minify-css": "cssnano dist/ui/frontend/static/css/main.css dist/ui/frontend/static/css/main.min.css --no-map",
    "start": "node dist/main.js",
    "dev": "tsx src/main.ts",
    "watch": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate-icons": "node scripts/generate-icons.mjs",
    "create-shortcut": "powershell -ExecutionPolicy Bypass -File scripts/create-desktop-shortcut.ps1",
    "build:electron": "npm run generate-icons && npm run build && electron-builder",
    "build:electron:win": "npm run generate-icons && npm run build && electron-builder --win",
    "generate-checksums": "powershell -ExecutionPolicy Bypass -File scripts/generate-checksums.ps1",
    "build:electron:mac": "npm run generate-icons && npm run build && electron-builder --mac",
    "build:electron:linux": "npm run generate-icons && npm run build && electron-builder --linux",
    "dev:electron": "npm run build && electron .",
    "electron": "electron .",
    "kill-ports": "powershell -ExecutionPolicy Bypass -File scripts/kill-ports.ps1"
  },
  "keywords": [
    "obs",
    "streaming",
    "rtmp",
    "multi-platform",
    "youtube",
    "twitch",
    "facebook"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dunder-proto": "^1.0.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.1.0",
    "node-media-server": "^2.6.2",
    "winston": "^3.11.0",
    "ws": "^8.16.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.11.5",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "cssnano-cli": "^1.0.5",
    "electron": "^39.1.2",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.19.12",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "sharp": "^0.34.5",
    "terser": "^5.44.1",
    "to-ico": "^1.1.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.obs-multi-platform-streaming.app",
    "productName": "OBS Multi-Platform Streaming",
    "directories": {
      "output": "build-electron"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/dunder-proto/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
